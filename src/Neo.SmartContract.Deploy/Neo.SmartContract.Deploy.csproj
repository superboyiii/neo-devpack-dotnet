<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Nullable>enable</Nullable>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <AssemblyTitle>Neo.SmartContract.Deploy</AssemblyTitle>
    <AssemblyName>Neo.SmartContract.Deploy</AssemblyName>
    <PackageId>Neo.SmartContract.Deploy</PackageId>
    <Description>Neo Smart Contract deployment toolkit for simplified contract deployment</Description>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="9.0.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="9.0.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="9.0.1" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="9.0.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="9.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\neo\src\Neo\Neo.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="**/*.cs">
      <Pack>true</Pack>
      <PackagePath>src</PackagePath>
    </Compile>
  </ItemGroup>

</Project>