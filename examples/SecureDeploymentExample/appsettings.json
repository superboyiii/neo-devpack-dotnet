{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Neo.SmartContract.Deploy": "Debug"
    }
  },
  "Neo": {
    "MainnetRpcUrl": "https://seed1.neo.org:443",
    "TestnetRpcUrl": "https://seed1.ngd.network:443",
    "DefaultNetworkMagic": 860833102,
    "DefaultGasLimit": 100000000
  },
  "Security": {
    "RequireSecureCredentials": true,
    "ValidateRpcCertificates": true,
    "EnableHealthChecks": true,
    "CredentialProviderType": "Secure"
  },
  "Monitoring": {
    "EnableMetrics": true,
    "EnablePerformanceMonitoring": true,
    "MetricsRetentionDays": 7,
    "DeploymentHistoryPath": "./deployment-history.json"
  }
}